<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Units">
        <ListPreference
            android:key="temperature_unit"
            android:title="Temperature Unit"
            android:summary="%s"
            android:entries="@array/temperature_units"
            android:entryValues="@array/temperature_unit_values"
            android:defaultValue="celsius"
            />

        <ListPreference
            android:key="speed_unit_preference"
            android:title="Speed Unit"
            android:summary="%s"
            android:entries="@array/speed_units"
            android:entryValues="@array/speed_unit_values"
            android:defaultValue="kmh" />

        <ListPreference
            android:key="time_format_preference"
            android:title="Time Format"
            android:summary="%s"
            android:entries="@array/time_formats"
            android:entryValues="@array/time_format_values"
            android:defaultValue="24" />

        <ListPreference
            android:key="pressure_unit_preference"
            android:title="Air Pressure Unit"
            android:summary="%s"
            android:entries="@array/pressure_units"
            android:entryValues="@array/pressure_unit_values"
            android:defaultValue="hpa" />
    </PreferenceCategory>
    <PreferenceCategory app:title="Other">

    <Preference
        android:key="logout_button_custom"
        app:title="Logout"
        />
    </PreferenceCategory>

</PreferenceScreen>